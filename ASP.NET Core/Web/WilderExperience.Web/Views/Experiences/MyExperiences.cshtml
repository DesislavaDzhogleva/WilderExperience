@model IEnumerable<WilderExperience.Web.ViewModels.Shared.ExperienceViewModel>
@using WilderExperience.Web.ViewModels.Shared
@{
    ViewData["Title"] = "MyExperiences";
}

<h1 class="mb-3 text-center">User <b class="text-primary">@this.ViewData["Username"]</b></h1>

@if (!Model.Any())
{
    <div>
        <h1 class="title">No Experiences Yet!</h1>
    </div>
}
else
{
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    @Html.Partial("_SortingLinkPartial", new SortingLinkViewModel { Field = "Location" })
                </th>
                <th scope="col">
                    @Html.Partial("_SortingLinkPartial", new SortingLinkViewModel { Field = "Title" })
                </th>
                <th scope="col">
                    @Html.Partial("_SortingLinkPartial", new SortingLinkViewModel { Field = "Rating" })
                </th>
                <th scope="col">
                    @Html.Partial("_SortingLinkPartial", new SortingLinkViewModel { Field = "CreatedOn" })
                </th>
                <th scope="col">Modify</th>
            </tr>
        </thead>
        @Html.DisplayForModel()
    </table>
    @Html.Partial("_PaginationPartial")
}



