@model IEnumerable<WilderExperience.Web.ViewModels.Experiences.ExperiencesListViewModel>
    @{
        this.ViewData["Title"] = "Home Page";
    }
    <h1 class="title fancy-title w-100 text-center">Top Destinations</h1>

    <div class="masonry mt-4">
        @foreach (var item in Model)
        {
            @if (item.Image != null)
            {
                <div class="brick">
                    <img src="~/uploads/experiences/@item.Image.Name" alt="@item.Title" title="@item.Title">
                    <a class="overlay" asp-controller="Experiences" asp-action="Details" asp-route-id="@item.Id">
                        <h3 class="title">@item.Title</h3>
                        <div class="description">
                            <p>
                                @item.Summary
                            </p>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
