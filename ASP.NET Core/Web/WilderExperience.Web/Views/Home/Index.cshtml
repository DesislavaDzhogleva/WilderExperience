@using WilderExperience.Common
@{
    this.ViewData["Title"] = "Home Page";
}
    <header class="masthead text-white text-center home-search">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h1 class="mb-5">Find your next destination!</h1>
                </div>
                <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                    <form>
                        <div class="form-row">
                            <div class="col-12 col-md-9 mb-2 mb-md-0">
                                <input type="email" class="form-control form-control-lg" placeholder="Enter city, village or landmark...">
                            </div>
                            <div class="col-12 col-md-3">
                                <button type="submit" class="btn btn-block btn-lg btn-primary"><span class="fas fa-search pr-2"></span>Search</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </header>

<div style="width:100%;height:2000px;"></div>
