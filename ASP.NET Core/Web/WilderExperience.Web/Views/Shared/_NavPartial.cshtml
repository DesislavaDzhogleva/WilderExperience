@using WilderExperience.Common
@using WilderExperience.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "_NavPartial";
}

    <ul class="navbar-nav">
        @if (this.SignInManager.IsSignedIn(this.User))
        {
            if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="Administration" asp-controller="Users" asp-action="List" title="Admin">Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Administration" asp-controller="Experiences" asp-action="Index" title="Admin">Experiences</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Experiences" asp-action="MyExperiences">My Experiences</a>
                </li>
            }

        }
    </ul>
